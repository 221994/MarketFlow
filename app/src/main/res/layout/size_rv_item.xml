<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivShadowColor"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="#B8D9FA"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivColor"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@color/g_gray500"
        app:layout_constraintBottom_toBottomOf="@id/ivShadowColor"
        app:layout_constraintEnd_toEndOf="@+id/ivShadowColor"
        app:layout_constraintStart_toStartOf="@id/ivShadowColor"
        app:layout_constraintTop_toTopOf="@id/ivShadowColor" />

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_picked"
        android:text="S"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/ivColor"
        app:layout_constraintEnd_toEndOf="@+id/ivColor"
        app:layout_constraintStart_toStartOf="@id/ivColor"
        app:layout_constraintTop_toTopOf="@id/ivColor" />

</androidx.constraintlayout.widget.ConstraintLayout>